{
  "name": "bitwise-flag",
  "version": "1.1.0",
  "type": "module",
  "license": "MIT",
  "files": [
    "./dist/*.js",
    "./dist/*.d.ts",
    "./README.md",
    "./LICENSE.md",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ThatsEmbarrassing/bitwise-flag"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "author": "Ember",
  "scripts": {
    "build": "bunup",
    "tests": "bun test",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "docs": "typedoc",
    "docs:serve": "typedoc --watch",
    "commit": "cz",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.0",
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/bun": "^1.3.1",
    "bunup": "^0.15.13",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.0",
    "typedoc": "^0.28.14",
    "typedoc-plugin-extras": "^4.0.1",
    "typedoc-theme-hierarchy": "^6.0.0",
    "typescript-eslint": "^8.46.2"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}
